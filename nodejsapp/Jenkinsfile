pipeline{
    agent none
    stages{
        stage('build'){
              
            agent{
                label 'build-slave'
            }
           
            steps{
                 
                script {
                    def customImage = docker.build("my-image:${env.BUILD_ID}","./nodejsapp")
                    customImage.inside{
                        sh 'node --version' 
                    }
                
                }
               
            } 
         }
    }
}
